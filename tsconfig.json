{
  "compilerOptions": {
    "target": "es2017", 
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "outDir": "./lib",
    "lib": ["ES2017", "dom"],
    "esModuleInterop": true,
    "removeComments": true,
    "declaration": true,
    "preserveConstEnums": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/test/*",
    "mocks",
    "mocks/**/*"
  ]
}
